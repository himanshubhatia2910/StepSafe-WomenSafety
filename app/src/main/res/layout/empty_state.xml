<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/user_es"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/es_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/es_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/es_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="It's empty for now!"
            android:textColor="#6C63FF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/es_descp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/es_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Once you add Emergency Contacts, you can view the list of those contacts here."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!--<TextView
            android:id="@+id/es_button"
            android:layout_width="@dimen/width_100_dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/es_descp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:background="@drawable/es_button_bg"
            android:padding="@dimen/padding_10_dp"
            android:text="Add Member"
            android:textColor="@color/white" />-->

    </RelativeLayout>

</FrameLayout>