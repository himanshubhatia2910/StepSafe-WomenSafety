<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F0F4F3"
    android:layout_height="match_parent">
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Helpline Numbers"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#6C63FF"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        />


    <TextView
        android:id="@+id/police"
        android:layout_width="312dp"
        android:layout_height="75dp"
        android:layout_below="@id/num"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/helpline"
        android:drawableStart="@drawable/ic_group_5"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingLeft="10dp"
        android:textColor="#6C63FF" />

    <TextView
        android:id="@+id/women"
        android:layout_width="312dp"
        android:layout_height="75dp"
        android:layout_below="@id/police"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="-25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/helpline"
        android:drawableStart="@drawable/ic_group_6"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textColor="#6C63FF" />
    <TextView
        android:id="@+id/domestic"
        android:layout_width="312dp"
        android:layout_height="75dp"
        android:layout_below="@id/women"
        android:layout_marginTop="-25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/helpline"
        android:drawableStart="@drawable/ic_group_7"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textColor="#6C63FF" />
    <TextView
        android:id="@+id/ambulance"
        android:layout_width="312dp"
        android:layout_height="75dp"
        android:layout_below="@id/domestic"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/helpline"
        android:drawableStart="@drawable/ic_group_8"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textColor="#6C63FF" />
    <TextView
        android:id="@+id/fire"
        android:layout_width="312dp"
        android:layout_height="75dp"
        android:layout_below="@id/ambulance"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/helpline"
        android:drawableStart="@drawable/ic_group_9"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textColor="#6C63FF" />

</RelativeLayout>